<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiWeatherApp.MainPage"
             Title="Weather App"
             BackgroundColor="#F9FAFB">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="Weather App" 
                   FontSize="36" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="#2E3A59" />

            <!-- Search Section -->
            <Border BackgroundColor="#FFFFFF" Padding="15" StrokeShape="RoundRectangle 12" Shadow="Medium">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="10">
                        <Entry x:Name="CityEntry" 
                               Placeholder="Enter city name..." 
                               HorizontalOptions="FillAndExpand" />
                        <Button x:Name="SearchCityBtn" 
                                Text="Search" 
                                Clicked="OnSearchCityClicked"
                                BackgroundColor="#4A90E2" 
                                TextColor="White" />
                    </HorizontalStackLayout>
                    <Button x:Name="GetLocationBtn" 
                            Text="📍 Use Current Location" 
                            Clicked="OnGetLocationClicked"
                            BackgroundColor="#5CB85C" 
                            TextColor="White" />
                </VerticalStackLayout>
            </Border>

            <!-- Weather Card -->
            <Border x:Name="WeatherFrame" 
                    BackgroundColor="#FFFFFF" 
                    Padding="20" 
                    IsVisible="False"
                    StrokeShape="RoundRectangle 18"
                    Shadow="Medium">

                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">

                    <!-- City Name -->
                    <Label x:Name="CityLabel" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           TextColor="#2E3A59" />

                    <!-- Temperature -->
                    <Label x:Name="TemperatureLabel" 
                           FontSize="60" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           TextColor="#E74C3C" />

                    <!-- Weather Icon + Description -->
                    <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Image x:Name="WeatherIcon" 
                               WidthRequest="70" HeightRequest="70" />
                        <VerticalStackLayout>
                            <Label x:Name="WeatherDescription" 
                                   FontSize="20" FontAttributes="Bold" 
                                   TextColor="#2E3A59" />
                            <Label x:Name="WeatherMain" 
                                   FontSize="16" 
                                   TextColor="#666" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!-- Quick Stats in a Horizontal Row -->
                    <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                        <Border BackgroundColor="#F8F9FA" StrokeShape="RoundRectangle 10" Padding="10">
                            <Label Text="Feels: " FontAttributes="Bold" />
                            <Label x:Name="FeelsLikeLabel" />
                        </Border>
                        <Border BackgroundColor="#F8F9FA" StrokeShape="RoundRectangle 10" Padding="10">
                            <Label Text="Humidity: " FontAttributes="Bold" />
                            <Label x:Name="HumidityLabel" />
                        </Border>
                        <Border BackgroundColor="#F8F9FA" StrokeShape="RoundRectangle 10" Padding="10">
                            <Label Text="Wind: " FontAttributes="Bold" />
                            <Label x:Name="WindSpeedLabel" />
                        </Border>
                    </HorizontalStackLayout>

                    <!-- Pressure & Visibility Grid -->
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" Margin="0,10,0,0" ColumnSpacing="20" RowSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0" Text="Pressure:" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1" x:Name="PressureLabel" />
                        <Label Grid.Row="1" Grid.Column="0" Text="Visibility:" FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="1" x:Name="VisibilityLabel" />
                    </Grid>

                </VerticalStackLayout>
            </Border>

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                               IsVisible="False" 
                               IsRunning="False" 
                               Color="#4A90E2" 
                               HorizontalOptions="Center" />

            <!-- Status Message -->
            <Label x:Name="StatusLabel" 
                   FontSize="16" 
                   HorizontalOptions="Center"
                   TextColor="#E74C3C" 
                   IsVisible="False" />

            <!-- Instructions Card -->
            <Border BackgroundColor="#FFF3CD" Padding="15" StrokeShape="RoundRectangle 8">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Instructions:" FontAttributes="Bold" TextColor="#856404" />
                    <Label Text="1. Click 'Use Current Location' to use GPS" TextColor="#856404" />
                    <Label Text="2. Or enter a city name and click 'Search'" TextColor="#856404" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
